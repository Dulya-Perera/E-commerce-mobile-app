<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/uProductID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/enter_product_id"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/uProductTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/enter_product_title" />

    <EditText
        android:id="@+id/uProductDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/enter_product_description"
        android:inputType="textLongMessage|text" />

    <EditText
        android:id="@+id/uProductSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:autofillHints="Product Size"
        android:hint="@string/enter_product_available_sizes" />

    <EditText
        android:id="@+id/uProductColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:autofillHints="Product Color"
        android:hint="@string/enter_product_available_color" />

    <EditText
        android:id="@+id/uProductPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:autofillHints="Product Price"
        android:hint="@string/enter_product_price" />

    <EditText
        android:id="@+id/uProductOffer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/enter_offer"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/uProductImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:autofillHints="Product Offer"
        android:hint="@string/enter_the_uri_of_product_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/updateBtn"
            android:text="@string/apply_changes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>


</LinearLayout>